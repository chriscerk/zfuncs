# ~/zfuncs/ts-to-js.zsh
# Change extensions from JS -> TS underneath a directory
__js-to-ts() {  
    FIND='(**/)(*).js'
    REPLACE='${1}${2}.ts'

    echo "JS -> TS"
    echo "-------"
    zmv -n $FIND $REPLACE
    echo "-------"
    read "reply?Continue (y/n)?"

    if [[ $reply =~ ^[Yy]$ ]]
    then
        echo "JS->TS Complete"
        zmv $FIND $REPLACE
    fi
}

__js-to-ts
